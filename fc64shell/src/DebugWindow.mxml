<mx:TitleWindow width="456" height="374"
	layout="vertical"
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	title="C64 Debugger"
	showCloseButton="true"
	close="PopUpManager.removePopUp( this );">

	<fx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
		]]>
	</fx:Script>

	<mx:HDividedBox width="100%" height="100%">
		<mx:List id="memory"
			height="100%">
		</mx:List>
		<mx:VBox width="205" height="100%">
			<mx:Label text="Registers:" />
			<mx:Tile width="205" height="55">
				<mx:HBox>
					<mx:Label text="A:" />
					<mx:TextInput id="registerA"
						width="28" />
				</mx:HBox>
				<mx:HBox>
					<mx:Label text="X:" />
					<mx:TextInput id="registerX"
						width="28" />
				</mx:HBox>
				<mx:HBox>
					<mx:Label text="Y:" />
					<mx:TextInput id="registerY"
						width="28" />
				</mx:HBox>
				<mx:HBox>
					<mx:Label text="PC:" />
					<mx:TextInput id="registerPC"
						width="28" />
				</mx:HBox>
				<mx:HBox>
					<mx:Label text="SP:" />
					<mx:TextInput id="registerSP"
						width="28" />
				</mx:HBox>
			</mx:Tile>
			<mx:Label text="CPU Status Flags:" />
			<mx:Tile width="205" height="48">
				<mx:CheckBox id="flagN"
					label="N" />
				<mx:CheckBox id="flagV"
					label="V" />
				<mx:CheckBox id="flagU"
					label="U" />
				<mx:CheckBox id="flagB"
					label="B" />
				<mx:CheckBox id="flagD"
					label="D" />
				<mx:CheckBox id="flagI"
					label="I" />
				<mx:CheckBox id="flagZ"
					label="Z" />
				<mx:CheckBox id="flagC"
					label="C" />
			</mx:Tile>
			<mx:HBox width="100%" height="100%">
				<mx:VBox width="100%" height="100%">
					<mx:Label text="Stack:" />
					<mx:List id="stack"
						width="100%" height="100%">
					</mx:List>
				</mx:VBox>
			</mx:HBox>
		</mx:VBox>
	</mx:HDividedBox>
</mx:TitleWindow>
